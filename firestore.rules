
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Syllabus is readable by any authenticated user, but writable only by admins (not implemented yet).
    // For now, we will leave it writable for any authenticated user to allow seeding.
    match /syllabus/{subjectId} {
      allow read, write: if request.auth != null;
    }
    
    match /syllabus/{subjectId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Users can only read and write to their own user document and its subcollections.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
